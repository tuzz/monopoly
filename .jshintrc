{
  "esversion": 6,

  "globals": {
    "lib": true,
    "fixture": true
  },

  // Enforcing options:
  "bitwise"              : true,
  "camelcase"            : true,
  "curly"                : true,
  "eqeqeq"               : true,
  "es3"                  : false,
  "forin"                : true,
  "freeze"               : true,
  "immed"                : true,
  "latedef"              : false,
  "newcap"               : false,
  "noarg"                : true,
  "noempty"              : true,
  "nonew"                : true,
  "plusplus"             : true,
  "quotmark"             : false,
  "undef"                : true,
  "unused"               : true,
  "strict"               : true,

  // Relaxing options:
  "multistr"             : true,
  "asi"                  : false,
  "boss"                 : false,
  "debug"                : false,
  "eqnull"               : false,
  "esnext"               : false,
  "evil"                 : false,
  "expr"                 : true,
  "funcscope"            : false,
  "globalstrict"         : false,
  "iterator"             : false,
  "lastsemic"            : false,
  "laxbreak"             : false,
  "laxcomma"             : false,
  "loopfunc"             : false,
  "moz"                  : false,
  "notypeof"             : false,
  "proto"                : false,
  "scripturl"            : false,
  "shadow"               : false,
  "sub"                  : false,
  "supernew"             : false,
  "validthis"            : false,
  "noyield"              : false,

  // Environment options:
  "node"                 : true,
  "jasmine"              : true,
  "browser"              : false,
  "couch"                : false,
  "devel"                : false,
  "dojo"                 : false,
  "jquery"               : false,
  "mootools"             : false,
  "nonstandard"          : false,
  "phantom"              : false,
  "prototypejs"          : false,
  "rhino"                : false,
  "worker"               : false,
  "wsh"                  : false,
  "yui"                  : false,

  // Numeric options:
  "maxerr"               : 50,
  "maxparams"            : 5,
  "maxdepth"             : 4,
  "maxcomplexity"        : 8,
  "maxlen"               : 80,
  "indent"               : 2
}
